/* pages/index/message.wxss */
.message_content{
    margin: 0.5rem 0.5rem;
    border: 3px solid #DDD;
    border-radius: 5px;
    font-family: '微软雅黑';
}

.content_info{
    background: #F6F6F6;
    padding: 0.5rem 0;
    position: relative;
    height: 1rem;
}

.info_name{
    display: inline-block;
    position: absolute;
    top: 0;
    left: 1rem;
    height:2rem;
    line-height: 2rem;
}

.info_time{
    display: inline-block;
    position: absolute;
    top: 0;
    right: 1rem;
    height:2rem;
    line-height: 2rem;
}

.content_mes{
    padding: 1rem 0.6rem;
    text-indent: 2em;
    background: #EEE;
}

.content_ctrl{
    padding:0.8rem;
    position: relative;
    font-size: 0.8rem;
}

.good{
    position: absolute;
    top: 0;
    left: 1rem;
    height:1.6rem;
    line-height: 1.6rem;
    padding-left: 1.2rem;
    background: url('https://www.nwsuaforchestra.cn/images/good.png') no-repeat left 0.28rem;
}

.reply{
    position: absolute;
    top: 0;
    left: 5rem;
    height:1.6rem;
    line-height: 1.6rem;
    padding-left: 1.2rem;
    background: url('https://www.nwsuaforchestra.cn/images/reply.png') no-repeat left center;
}

.allreply{
    position: absolute;
    top: 0;
    right: 1rem;
    height:1.6rem;
    line-height: 1.6rem;
    padding-left: 1.2rem;
    background: url('https://www.nwsuaforchestra.cn/images/getreply.png') no-repeat left center;
}

.input_area{
    position: fixed;
    bottom: 0;
    left: 0;
    background: #FAFAFA;
    height: 4rem;
    width: 100%;
}

.input{
    border: 1px solid #333;
    border-radius: 4px;
    height: 2rem;
    font-size: 1.2rem;
    padding: 0.2rem 1rem;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto 1rem;
    display: inline-block;
}

.newreply{
    display: inline-block;
    line-height: 3rem;
    position: absolute;
    right: 1rem;
}

.space{
    width: 100%;
    height: 4rem;
}