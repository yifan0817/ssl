/* pages/info/info.wxss */
page{
    background: #DDD;
    font-family: "微软雅黑";
    position: relative;
}
.user_info{
    height: 12.5rem;
    background: #3B0;
    letter-spacing: 0.1rem;   
}

.user_pic{
    text-align: center;
    height: 5rem;
    padding: 0.5rem;
}

.user_name{
    text-align: center;
    height: 2rem;
    line-height: 2rem;
    font-weight: 550;
}

.user_pic image{
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    background: #CCC;
}

.login{
    position: relative;
    margin: 0.5rem;
}

.wxLogin{
    display: inline-block;
    position:absolute;
    top: 0;
    left: 15%;
    border: 1px solid #FFF;
    padding: 0.5rem 0.7rem;
    border-radius: 4px;
    color: #FFF;
}

.myLogin{
    display: inline-block;
    position:absolute;
    top: 0;
    right: 15%;
    border: 1px solid #FFF;
    padding: 0.5rem 0.7rem;
    border-radius: 4px;
    color: #FFF;
}

.loginbox{
    position: fixed;
    left: 0;
    right: 0;
    margin: auto;
    top: 0;
    bottom: 0;
    width: 85%;
    height: 20rem;
    border: 2px solid #DDD;
    background-color: #F2F2F2;
    border-radius: 8px;
    z-index: 5;
}

.loginbox_title{
    text-align: center;
    padding: 1rem;
    color: #777;
    font-weight: bold;
    font-size: 1.2rem;
}

.loginbox input{
    border-top: 1px solid #DDD;
    border-bottom: 1px solid #DDD;
    height: 1rem;
    padding: 0.7rem 3.2rem 0.7rem 2.5rem;
    margin: 0 1rem;
    font-size: 1.1rem;
}

.account_icon image{
    z-index: 3;
    width: 1.6rem;
    height: 1.6rem;
    position: absolute;
    top: 22%;
    left: 8%;
}

.passwd_icon image{
    z-index: 3;
    width: 1.6rem;
    height: 1.6rem;
    position: absolute;
    top: 37%;
    left: 8%;
}

.login_btn{
    width: 40%;
    height: 2.7rem;
    line-height: 2.7rem;
    position: absolute;
    left: 7%;
    top: 52%;
    background: limegreen;
    font-size: 1.23rem;
    letter-spacing: 0.7rem;
    text-indent: 0.7rem;
}

.sign_btn{
    width: 40%;
    height: 2.7rem;
    line-height: 2.7rem;
    position: absolute;
    right: 7%;
    top: 52%;
    background: dodgerblue;
    font-size: 1.23rem;
    letter-spacing: 0.7rem;
    text-indent: 0.7rem;
}

.show_passwd image{
    z-index: 3;
    width: 2rem;
    height: 2rem;
    position: absolute;
    top: 35%;
    right: 10%;
}

.closeLoginBox image{
    width: 1.5rem;
    height: 1.5rem;
    border: 3px solid #999;
    padding: 0.3rem;
    border-radius: 50%;
    position: absolute;
    bottom: 10%;
    margin: auto;
    left: 0;
    right: 0;
    opacity: 0.7;
}

.menu{
    height: 3rem;
    line-height: 3rem;
    padding-left: 3.5rem;
    border-bottom: 1px solid #CCC;
    background: #FAFAFA;
    position: relative;
}

.menu image{
    position: absolute;
    width: 1.7rem;
    height: 1.7rem;
    top: 0;
    left: 5%;
    bottom: 0;
    margin: auto;
}

.share{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 60%;
    background: #FFF;
    height: 17rem;
    border-radius: 10px;
    z-index: 5;
}

.share image{
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    margin: auto;
}

.close_share{
    position: absolute;
    left: 50%;
    bottom: 13%;
    margin-left: -0.8rem;
}

.close_share image{
    width: 1.6rem;
    height: 1.6rem;
    border: 3px solid #999;
    border-radius: 50%;
}

.mask{
  width: 100%;
  height: 200rem;
  background: #111;
  z-index: 3;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.7;
}
